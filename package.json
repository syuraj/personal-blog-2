{
  "name": "storyhub",
  "private": true,
  "description": "",
  "version": "1.2.0",
  "author": "RedQ, Inc",
  "devDependencies": {
    "husky": "^1.1.4",
    "lerna": "^3.13.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.3",
    "tslint": "^5.13.0",
    "tslint-react": "^3.6.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd packages/personal-blog-minimal && gatsby develop",
    "build": "cd packages/personal-blog-minimal && gatsby build",
    "serve": "cd packages/personal-blog-minimal && gatsby serve",
    "docz:dev": "cd packages/components && docz dev",
    "docz:build": "cd packages/components && docz build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
